{
    "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "a11y": {
          "noBlankTarget": "off"
        },
        "nursery": {
          "noConsole": "error"
        },
        "complexity": {
          "noUselessLoneBlockStatements": "warn"
        }
      }
    },
    "files": {
      "include": [
        "./**/*.js",
        "./**/*.ts",
        "./**/*.jsx",
        "./**/*.tsx",
        "./**/*.css",
        "./**/*.json",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "lib/**/*.ts",
        "lib/**/*.tsx",
        "lib/**/*.js",
        "lib/**/*.jsx",
        "./biome.json",
        "./package.json",
        "./tsconfig.json",
        "./vite.config.ts"
      ],
      "ignore": ["node_modules", "**/node_modules/**", "dist", "bin"]
    },
  
    "css": {
      "formatter": {
        "enabled": true,
        "indentStyle": "space"
      },
      "linter": {
        "enabled": true
      },
      "parser": {
        "cssModules": true
      }
    },
  
    "javascript": {
      "formatter": {
        "arrowParentheses": "asNeeded",
        "indentStyle": "space",
        "indentWidth": 2,
        "bracketSpacing": true,
        "semicolons": "always",
        "quoteProperties": "preserve",
        "jsxQuoteStyle": "single",
        "quoteStyle": "single",
        "attributePosition": "multiline",
        "lineEnding": "lf",
        "lineWidth": 100,
        "bracketSameLine": true
      }
    },
    "json": {
      "formatter": {
        "enabled": true,
        "indentWidth": 2
      }
    },
  
    "formatter": {
      "enabled": true,
      "formatWithErrors": false,
      "attributePosition": "auto",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "lineWidth": 80,
      "ignore": [
        "node_modules",
        "docs",
        "dist",
        "public",
        "**/node_modules/**",
        "bin"
      ]
    }
  }
  